{
  "manifest_version": 3,
  "name": "Email Phishing Checker",
  "version": "1.0",
  "description": "Verifica se hรก e-mails de phishing na caixa de entrada",
  "permissions": ["scripting", "storage", "activeTab", "webRequest", "webRequestBlocking"],
  "host_permissions": ["https://mail.google.com/*", "https://safebrowsing.googleapis.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["contentScript.js"]
    }
  ]
}